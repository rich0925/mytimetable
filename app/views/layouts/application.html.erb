<!DOCTYPE html>
<html>
  <head>
    <title>Mytimetable</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to root_path do %>
          <p class="header-top-title navbar-left">my time table</p>
        <% end %>
        <ul class="header-user-operation nav navbar-nav navbar-right">
              <% if logged_in? %>
                <div class="header-user-name">
                  <p>「<%= current_user.name %>」がログイン中</p>
                </div>
                <li>
                  <%= link_to logout_path, method: :delete do %>
                    <p>log out</p>
                  <% end %>
                </li>
                
              <% else %>
                <li>
                  <%= link_to new_user_path do %>
                    <p>sign up</p>
                  <% end %>
                </li>
                <li>
                  <%= link_to login_path do %>
                    <p>log in</p>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>

<%= yield %>

<script>
  $(function(){
    $(".alert").fadeOut(5000);
  });
</script>

  </body>
</html>
